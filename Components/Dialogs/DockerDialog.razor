@using QingFeng.Services
@using QingFeng.Models
@inject IDockerService DockerService
@inject QingFeng.Services.IDialogService DialogService

<div class="modal-content-custom">
    <div class="modal-header-custom">
        <h6>
            <i class="@Icons.Material.Filled.Dns me-2"></i>
            @(Title ?? "Docker管理")
        </h6>
    </div>
    <div class="modal-body-custom">
        <button type="button" class="btn btn-custom-primary mb-3" @onclick="RefreshData">
            <i class="@Icons.Material.Filled.Refresh me-2"></i>
            刷新
        </button>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert @(isError ? "alert-danger" : "alert-success") mb-3">
                @message
                <button type="button" class="btn-close" @onclick="@(() => message = string.Empty)" aria-label="Close"></button>
            </div>
        }

        <!-- Containers Section -->
        <h5 class="mb-3">
            <i class="@Icons.Material.Filled.Inventory me-2"></i>
            容器列表
        </h5>
        @if (containers != null && containers.Any())
        {
            <div class="table-responsive">
                <table class="table table-custom table-sm">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>镜像</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var container in containers)
                        {
                            <tr>
                                <td>@container.Name</td>
                                <td><small>@container.Image</small></td>
                                <td>
                                    <span class="badge @(container.State == "running" ? "badge-success" : "badge-custom")">
                                        @container.State
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        @if (container.State == "running")
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-warning" @onclick="@(() => StopContainer(container.Id))" disabled="@isProcessing" title="停止">
                                                <i class="@Icons.Material.Filled.Stop"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-success" @onclick="@(() => StartContainer(container.Id))" disabled="@isProcessing" title="启动">
                                                <i class="@Icons.Material.Filled.PlayArrow"></i>
                                            </button>
                                        }
                                        <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="@(() => ShowLogs(container))" title="日志">
                                            <i class="@Icons.Material.Filled.Article"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (isLoading)
        {
            <div class="d-flex align-items-center gap-2">
                <div class="spinner-border spinner-border-sm" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <span>加载中...</span>
            </div>
        }
        else
        {
            <p class="text-muted-custom">没有找到容器</p>
        }

        <!-- Images Section -->
        <h5 class="mb-3 mt-4">
            <i class="@Icons.Material.Filled.Layers me-2"></i>
            镜像列表
        </h5>
        @if (images != null && images.Any())
        {
            <div class="table-responsive">
                <table class="table table-custom table-sm">
                    <thead>
                        <tr>
                            <th>仓库</th>
                            <th>标签</th>
                            <th>大小</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var image in images)
                        {
                            <tr>
                                <td>@(image.RepoTags.FirstOrDefault()?.Split(':')[0] ?? "无")</td>
                                <td>@(image.RepoTags.FirstOrDefault()?.Split(':').LastOrDefault() ?? "latest")</td>
                                <td>@image.SizeMB</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (isLoading)
        {
            <div class="d-flex align-items-center gap-2">
                <div class="spinner-border spinner-border-sm" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <span>加载中...</span>
            </div>
        }
        else
        {
            <p class="text-muted-custom">没有找到镜像</p>
        }
    </div>
    <div class="modal-footer-custom">
        <button type="button" class="btn btn-custom" @onclick="Close">关闭</button>
    </div>
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public EventCallback OnCloseDialog { get; set; }
    
    private List<DockerContainerInfo> containers = new();
    private List<DockerImageInfo> images = new();
    private string message = string.Empty;
    private bool isError = false;
    private bool isLoading = false;
    private bool isProcessing = false;

    protected override async Task OnInitializedAsync()
    {
        await RefreshData();
    }

    private async Task RefreshData()
    {
        isLoading = true;
        try
        {
            containers = await DockerService.GetContainersAsync(true);
            images = await DockerService.GetImagesAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task StartContainer(string containerId)
    {
        isProcessing = true;
        message = string.Empty;
        
        try
        {
            await DockerService.StartContainerAsync(containerId);
            message = "容器已启动";
            isError = false;
            await RefreshData();
        }
        catch (Exception ex)
        {
            message = $"启动失败: {ex.Message}";
            isError = true;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task StopContainer(string containerId)
    {
        isProcessing = true;
        message = string.Empty;
        
        try
        {
            await DockerService.StopContainerAsync(containerId);
            message = "容器已停止";
            isError = false;
            await RefreshData();
        }
        catch (Exception ex)
        {
            message = $"停止失败: {ex.Message}";
            isError = true;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task ShowLogs(DockerContainerInfo container)
    {
        var parameters = new Dictionary<string, object>
        {
            { "ContainerId", container.Id },
            { "ContainerName", container.Name }
        };
        
        var options = new DialogOptions 
        { 
            MaxWidth = true, 
            FullWidth = true,
            CloseButton = true
        };
        
        await DialogService.ShowAsync<QingFeng.Components.Dialogs.ContainerLogsDialog>(
            $"容器日志 - {container.Name}", parameters, options);
    }

    private async Task Close()
    {
        if (OnCloseDialog.HasDelegate)
        {
            await OnCloseDialog.InvokeAsync();
        }
    }
}
