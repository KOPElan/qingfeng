@code {
    [Parameter]
    public string TerminalId { get; set; } = "terminal";

    private const int ReconnectDelayMs = 500;

    private HubConnection? _hubConnection;
    private string? _sessionId;
    private bool _isConnected = false;
    private bool _isConnecting = false;
    private Xterm? _terminal;
    private HashSet<string> _addons = new HashSet<string> { "addon-fit" };
    
    private TerminalOptions _terminalOptions = new TerminalOptions
    {
        CursorBlink = true,
        FontSize = 14,
        FontFamily = "Menlo, Monaco, 'Courier New', monospace",
        Theme = new Theme
        {
            Background = "#000000",
            Foreground = "#ffffff",
            Cursor = "#ffffff",
            CursorAccent = "#000000",
            SelectionBackground = "rgba(255, 255, 255, 0.3)",
            Black = "#000000",
            Red = "#e06c75",
            Green = "#98c379",
            Yellow = "#d19a66",
            Blue = "#61afef",
            Magenta = "#c678dd",
            Cyan = "#56b6c2",
            White = "#abb2bf",
            BrightBlack = "#5c6370",
            BrightRed = "#e06c75",
            BrightGreen = "#98c379",
            BrightYellow = "#d19a66",
            BrightBlue = "#61afef",
            BrightMagenta = "#c678dd",
            BrightCyan = "#56b6c2",
            BrightWhite = "#ffffff"
        },
        ConvertEOL = true,
        Scrollback = 1000,
        TabStopWidth = 4
    };

    private async Task OnTerminalFirstRender()
    {
        if (_terminal != null)
        {
            try
            {
                // Fit the terminal to the container
                await _terminal.Addon("addon-fit").InvokeVoidAsync("fit");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error fitting terminal on first render");
            }
        }
    }

    private async Task OnTerminalData(string data)
    {
        if (_hubConnection != null && _sessionId != null && _isConnected)
        {
            try
            {
                await _hubConnection.InvokeAsync("SendInput", _sessionId, data);
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error sending input to terminal");
            }
        }
    }

    private async Task OnTerminalResize(ResizeEventArgs args)
    {
        if (_hubConnection != null && _sessionId != null && _isConnected)
        {
            try
            {
                await _hubConnection.InvokeAsync("ResizeTerminal", _sessionId, args.Rows, args.Columns);
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error resizing terminal");
            }
        }
    }

    private async Task ConnectAsync()
    {
        try
        {
            _isConnecting = true;
            StateHasChanged();

            // Build SignalR connection
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("/terminalhub"))
                .WithAutomaticReconnect()
                .Build();

            // Handle receiving output from server
            _hubConnection.On<string>("ReceiveOutput", async (output) =>
            {
                if (_terminal != null)
                {
                    await _terminal.Write(output);
                }
            });

            // Handle connection lifecycle events for automatic reconnect
            _hubConnection.Reconnecting += error =>
            {
                Logger.LogWarning(error, "SignalR connection is reconnecting.");
                _isConnected = false;
                _isConnecting = true;
                StateHasChanged();
                return Task.CompletedTask;
            };

            _hubConnection.Reconnected += async connectionId =>
            {
                Logger.LogInformation("SignalR connection reconnected. ConnectionId: {ConnectionId}", connectionId);
                try
                {
                    // Create a new terminal session after reconnection
                    _sessionId = await _hubConnection.InvokeAsync<string>("CreateSession");
                    _isConnected = true;
                    _isConnecting = false;
                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Error creating session after reconnection");
                    _isConnected = false;
                    _isConnecting = false;
                    StateHasChanged();
                }
            };

            _hubConnection.Closed += async error =>
            {
                if (error != null)
                {
                    Logger.LogError(error, "SignalR connection closed.");
                }

                _isConnected = false;
                _isConnecting = false;
                _sessionId = null;
                
                if (_terminal != null)
                {
                    try
                    {
                        await _terminal.Reset();
                    }
                    catch (Exception ex)
                    {
                        Logger.LogDebug(ex, "Error clearing terminal on connection close");
                    }
                }
                StateHasChanged();
            };

            await _hubConnection.StartAsync();
            _sessionId = await _hubConnection.InvokeAsync<string>("CreateSession");
            
            _isConnected = true;
            _isConnecting = false;
            StateHasChanged();

            if (_terminal != null)
            {
                await _terminal.Focus();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error connecting to terminal");
            _isConnecting = false;
            _isConnected = false;
            StateHasChanged();
        }
    }

    private async Task ReconnectAsync()
    {
        // Restart terminal - clears existing session and creates new one
        await DisconnectAsync();
        await Task.Delay(ReconnectDelayMs);
        await ConnectAsync();
    }

    private async Task DisconnectAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.StopAsync();
            await _hubConnection.DisposeAsync();
            _hubConnection = null;
        }
        
        _sessionId = null;
        _isConnected = false;
        _isConnecting = false;
        
        if (_terminal != null)
        {
            try
            {
                await _terminal.Reset();
            }
            catch (Exception ex)
            {
                Logger.LogDebug(ex, "Error clearing terminal on disconnect");
            }
        }
        
        StateHasChanged();
    }

    private async Task ClearTerminal()
    {
        if (_terminal != null)
        {
            try
            {
                await _terminal.Clear();
            }
            catch (Exception ex)
            {
                Logger.LogDebug(ex, "Error clearing terminal");
            }
        }
    }

    public async ValueTask DisposeAsync()
    {
        await DisconnectAsync();
    }
}
