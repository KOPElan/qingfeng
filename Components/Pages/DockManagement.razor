@page "/dock-management"
@using QingFeng.Services
@using QingFeng.Models
@inject IDockItemService DockItemService
@inject IApplicationService ApplicationService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Dock 管理 - 清风</PageTitle>

<div class="dock-management-container">
    <div class="page-header">
        <h2><i class="bi bi-layout-text-sidebar-reverse me-2"></i>Dock 面板管理</h2>
        <button class="btn btn-primary" @onclick="ShowAddFromApps">
            <i class="bi bi-plus-lg me-2"></i>从应用添加
        </button>
    </div>

    <div class="dock-preview">
        <h5 class="mb-3">Dock 预览</h5>
        <div class="dock-items-preview">
            @foreach (var item in dockItems.OrderBy(d => d.SortOrder))
            {
                <div class="dock-item-preview">
                    <div class="dock-icon-preview" style="background: @item.IconBackground;">
                        <span class="material-symbols-outlined">@item.Icon</span>
                    </div>
                    <span class="dock-item-title">@item.Title</span>
                    @if (!item.IsSystemItem)
                    {
                        <div class="dock-item-actions">
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveDockItem(item)">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    }
                    else
                    {
                        <span class="system-badge">系统</span>
                    }
                </div>
            }
        </div>
    </div>

    <div class="dock-info-panel">
        <h5>说明</h5>
        <ul>
            <li>固定的系统项目（首页、设置）无法删除</li>
            <li>从应用中心固定的应用会自动添加到 Dock</li>
            <li>取消固定应用会从 Dock 中移除</li>
            <li>Dock 项目按排序顺序显示</li>
        </ul>
    </div>
</div>

@if (showAppSelector)
{
    <div class="modal-backdrop-custom" @onclick="CloseDialog"></div>
    <div class="modal-custom">
        <div class="modal-header-custom">
            <h5>选择应用添加到 Dock</h5>
            <button class="btn-close-custom" @onclick="CloseDialog">&times;</button>
        </div>
        <div class="modal-body-custom">
            <div class="apps-selector-grid">
                @foreach (var app in availableApps)
                {
                    <div class="app-selector-item" @onclick="() => PinAppToDock(app)">
                        <div class="app-icon-small" style="background: @app.IconColor;">
                            <i class="bi @app.Icon"></i>
                        </div>
                        <div class="app-info">
                            <span class="app-name">@app.Title</span>
                            <span class="app-cat">@app.Category</span>
                        </div>
                        <i class="bi bi-plus-circle"></i>
                    </div>
                }
            </div>
            @if (!availableApps.Any())
            {
                <div class="text-center py-4">
                    <p class="text-muted">所有应用都已固定到 Dock</p>
                </div>
            }
        </div>
    </div>
}

@code {
    private List<DockItem> dockItems = new();
    private List<Application> availableApps = new();
    private bool showAppSelector = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDockItemsAsync();
    }

    private async Task LoadDockItemsAsync()
    {
        dockItems = await DockItemService.GetAllDockItemsAsync();
    }

    private async Task ShowAddFromApps()
    {
        var allApps = await ApplicationService.GetAllApplicationsAsync();
        // Filter out apps that are already pinned
        availableApps = allApps.Where(a => !a.IsPinnedToDock).ToList();
        showAppSelector = true;
    }

    private async Task PinAppToDock(Application app)
    {
        await ApplicationService.TogglePinToDockAsync(app.AppId);
        await LoadDockItemsAsync();
        CloseDialog();
    }

    private async Task RemoveDockItem(DockItem item)
    {
        if (item.IsSystemItem)
            return;

        if (!string.IsNullOrEmpty(item.AssociatedAppId))
        {
            // Unpin the associated app
            await ApplicationService.TogglePinToDockAsync(item.AssociatedAppId);
        }
        else
        {
            // Remove the dock item directly
            await DockItemService.DeleteDockItemAsync(item.ItemId);
        }

        await LoadDockItemsAsync();
    }

    private void CloseDialog()
    {
        showAppSelector = false;
    }
}

