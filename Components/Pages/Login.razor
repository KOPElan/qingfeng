@page "/login"
@layout AuthLayout
@using QingFeng.Services
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2><i class="bi bi-box-arrow-in-right me-2"></i>登录</h2>
            <p class="text-muted">欢迎回来，请登录您的账号</p>
        </div>

        <div class="login-body">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                </div>
            }

            <div class="mb-3">
                <label class="form-label">用户名</label>
                <input type="text" class="form-control" @bind="username" placeholder="请输入用户名" 
                       @onkeypress="HandleKeyPress" />
            </div>

            <div class="mb-4">
                <label class="form-label">密码</label>
                <input type="password" class="form-control" @bind="password" placeholder="请输入密码"
                       @onkeypress="HandleKeyPress" />
            </div>

            <button class="btn btn-primary w-100" @onclick="LoginAsync" disabled="@isLoggingIn">
                @if (isLoggingIn)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>登录中...</span>
                }
                else
                {
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    <span>登录</span>
                }
            </button>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";
    private bool isLoggingIn = false;

    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    // Removed OnInitializedAsync to avoid navigation issues during render

    private async Task LoginAsync()
    {
        errorMessage = "";

        if (string.IsNullOrWhiteSpace(username))
        {
            errorMessage = "请输入用户名";
            return;
        }

        if (string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "请输入密码";
            return;
        }

        try
        {
            isLoggingIn = true;
            StateHasChanged();

            var user = await AuthService.LoginAsync(username, password);
            if (user == null)
            {
                errorMessage = "用户名或密码错误";
                return;
            }

            // Validate return URL to prevent open redirect
            var redirectUrl = GetSafeRedirectUrl(ReturnUrl);
            
            // Navigate without forceLoad to keep the same circuit and preserve auth state
            Navigation.NavigateTo(redirectUrl, forceLoad: false);
        }
        catch (Exception ex)
        {
            errorMessage = $"登录失败：{ex.Message}";
        }
        finally
        {
            isLoggingIn = false;
            StateHasChanged();
        }
    }

    private string GetSafeRedirectUrl(string? returnUrl)
    {
        // Only allow local relative URLs to prevent open redirect attacks
        if (string.IsNullOrWhiteSpace(returnUrl))
            return "/";

        // Check if URL is relative (starts with /)
        if (!returnUrl.StartsWith("/"))
            return "/";

        // Prevent protocol-relative URLs (//example.com)
        if (returnUrl.StartsWith("//"))
            return "/";

        // Check for javascript: or data: schemes
        if (returnUrl.Contains(":", StringComparison.OrdinalIgnoreCase))
            return "/";

        return returnUrl;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoggingIn)
        {
            await LoginAsync();
        }
    }
}

