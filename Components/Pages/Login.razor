@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";
    private bool isLoggingIn = false;

    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private async Task LoginAsync()
    {
        errorMessage = "";

        if (string.IsNullOrWhiteSpace(username))
        {
            errorMessage = "è¯·è¾“å…¥ç”¨æˆ·å";
            return;
        }

        if (string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "è¯·è¾“å…¥å¯†ç ";
            return;
        }

        try
        {
            isLoggingIn = true;
            StateHasChanged();

            var user = await AuthService.LoginAsync(username, password);
            if (user == null)
            {
                errorMessage = "ç”¨æˆ·åæˆ–å¯†ç é”™è¯¯";
                return;
            }

            var redirectUrl = GetSafeRedirectUrl(ReturnUrl);
            Navigation.NavigateTo(redirectUrl, forceLoad: false);
        }
        catch (Exception ex)
        {
            errorMessage = $"ç™»å½•å¤±è´¥ï¼š{ex.Message}";
        }
        finally
        {
            isLoggingIn = false;
            StateHasChanged();
        }
    }

    private string GetSafeRedirectUrl(string? returnUrl)
    {
        if (string.IsNullOrWhiteSpace(returnUrl))
            return "/";

        if (!returnUrl.StartsWith("/"))
            return "/";

        if (returnUrl.StartsWith("//"))
            return "/";

        if (returnUrl.Contains(":", StringComparison.OrdinalIgnoreCase))
            return "/";

        return returnUrl;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoggingIn)
        {
            await LoginAsync();
        }
    }
}

