@page "/initial-setup"
@layout AuthLayout
@using QingFeng.Models
@using QingFeng.Services
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="setup-container">
    <div class="setup-card">
        <div class="setup-header">
            <h2><i class="bi bi-shield-lock-fill me-2"></i>初始设置</h2>
            <p class="text-muted">欢迎使用清风！请创建管理员账号以开始使用。</p>
        </div>

        <div class="setup-body">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                </div>
            }

            <div class="mb-3">
                <label class="form-label">用户名</label>
                <input type="text" class="form-control" @bind="username" placeholder="请输入管理员用户名" />
                <small class="form-text text-muted">用户名将用于登录系统</small>
            </div>

            <div class="mb-3">
                <label class="form-label">密码</label>
                <input type="password" class="form-control" @bind="password" placeholder="请输入密码" />
                <small class="form-text text-muted">建议使用强密码保护您的账号安全</small>
            </div>

            <div class="mb-4">
                <label class="form-label">确认密码</label>
                <input type="password" class="form-control" @bind="confirmPassword" placeholder="请再次输入密码" />
            </div>

            <button class="btn btn-primary w-100" @onclick="CreateAdminAccount" disabled="@isCreating">
                @if (isCreating)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>创建中...</span>
                }
                else
                {
                    <i class="bi bi-check-circle me-2"></i>
                    <span>创建管理员账号</span>
                }
            </button>
        </div>

        <div class="setup-footer">
            <p class="text-muted mb-0">
                <i class="bi bi-info-circle me-1"></i>
                管理员拥有系统的完全控制权限，包括设置、Docker管理和磁盘管理。
            </p>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string confirmPassword = "";
    private string errorMessage = "";
    private bool isCreating = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if admin already exists - prevent unauthorized admin creation
            var hasAdmin = await AuthService.HasAdminUserAsync();
            if (hasAdmin)
            {
                // Admin already exists, redirect to login
                Navigation.NavigateTo("/login", forceLoad: true);
            }
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    private async Task CreateAdminAccount()
    {
        errorMessage = "";

        // Double-check admin doesn't exist (server-side guard)
        var hasAdmin = await AuthService.HasAdminUserAsync();
        if (hasAdmin)
        {
            errorMessage = "管理员账号已存在，请登录";
            return;
        }

        // Validation
        if (string.IsNullOrWhiteSpace(username))
        {
            errorMessage = "请输入用户名";
            return;
        }

        if (username.Length < 3)
        {
            errorMessage = "用户名至少需要3个字符";
            return;
        }

        if (string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "请输入密码";
            return;
        }

        // Enforce stronger password requirements
        if (password.Length < 8)
        {
            errorMessage = "密码至少需要8个字符";
            return;
        }

        // Check password complexity
        bool hasUpper = password.Any(char.IsUpper);
        bool hasLower = password.Any(char.IsLower);
        bool hasDigit = password.Any(char.IsDigit);
        bool hasSpecial = password.Any(c => !char.IsLetterOrDigit(c));

        if (!(hasUpper && hasLower && hasDigit && hasSpecial))
        {
            errorMessage = "密码必须包含大写字母、小写字母、数字和特殊字符";
            return;
        }

        if (password != confirmPassword)
        {
            errorMessage = "两次输入的密码不一致";
            return;
        }

        try
        {
            isCreating = true;
            StateHasChanged();

            // Create admin user using the RoleAdmin constant
            await AuthService.CreateUserAsync(username, password, User.RoleAdmin);

            // Don't auto login here due to session issues in interactive mode
            // Instead redirect to login page
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"创建账号失败：{ex.Message}";
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }
}

