        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
    }

    .settings-header h2 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 2rem;
        color: #e5e7eb;
    }

    .settings-section {
        background: rgba(30, 41, 59, 0.5);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        backdrop-filter: blur(10px);
    }

